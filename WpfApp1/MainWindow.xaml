<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Slider/>
        <Slider Minimum="0" SmallChange="1" LargeChange="1" Maximum="100" VerticalAlignment="Bottom">
            <i:Interaction.Behaviors>
                <local:SliderThumbToolTipBehavior Placement="TopLeft">
                    <local:SliderThumbToolTipBehavior.ToolTipTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Value}"/>
                        </DataTemplate>
                    </local:SliderThumbToolTipBehavior.ToolTipTemplate>
                </local:SliderThumbToolTipBehavior>
            </i:Interaction.Behaviors>
        </Slider>
        <Grid Grid.Row="1">
            <Slider Background="Red" Loaded="slider_t_Loaded" x:Name="slider_t" VerticalAlignment="Center">
            </Slider>
            <Popup x:Name="popup" IsOpen="False" PlacementTarget="{Binding ElementName=slider_t}" Placement="Bottom">
                <TextBlock FontSize="14" Background="LightGreen">Placement=Bottom</TextBlock>
            </Popup>
        </Grid>
        <Grid Grid.Row="2">
            <Slider 
    Minimum="10" 
    Maximum="9999" 
    Value="50"
    AutoToolTipPlacement="TopLeft" />
        </Grid>

    </Grid>
</Window>
