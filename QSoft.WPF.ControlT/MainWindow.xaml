<Window x:Class="QSoft.WPF.ControlT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QSoft.WPF.ControlT"
        d:DataContext="{d:DesignInstance local:MainUI}"
        mc:Ignorable="d"
        x:Name="local"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:qpanel="clr-namespace:QSoft.WPF.Panel;assembly=QSoft.WPF.Panel"
        xmlns:qcontrol="clr-namespace:QSoft.WPF.Control;assembly=QSoft.WPF.Control"
        xmlns:qbh="clr-namespace:QSoft.WPF.Behavior"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary Source="/RadioRoundButton.xaml"/>
    </Window.Resources>
    <StackPanel>
        <TabControl SelectedIndex="3">
            <TabItem Header="Fix">
                <StackPanel>
                    <qpanel:FlexPanel FlexDirection="Column" Gap="5" AlignItems="Stretch">
                        <TextBox Text="{Binding Fix, UpdateSourceTrigger=PropertyChanged}"/>
                        <qcontrol:RadioButtonList Command="{Binding DelayCommand}" SelectedValue="{Binding Fix}" SelectedValuePath="Tag" Height="35">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding SetFix1Command}" CommandParameter="{Binding Fix}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <RadioButton CommandParameter="{Binding Fix}" GroupName="fix" Tag="5">5</RadioButton>
                            <RadioButton Command="{Binding SetFixCommand}" CommandParameter="{Binding Fix}" GroupName="fix" Tag="50">50</RadioButton>
                            <RadioButton IsEnabled="{Binding IsChecked, ElementName=checkbox_r3}" ToolTipService.ShowOnDisabled="True" Command="{Binding SetFixCommand}" CommandParameter="{Binding Fix}" GroupName="fix" Tag="55" Content="55">
                                <RadioButton.ToolTip>
                                    <ToolTip Placement="Top">
                                        <TextBlock Text="123fghjklkjhgfghj\r\nsdfghjhgcxcvbn"/>
                                    </ToolTip>
                                </RadioButton.ToolTip>
                                <i:Interaction.Behaviors>
                                    <qbh:TooltipAlignmentBehavior HorizontalAlignment="Left" Gap="10" Offset="20"/>
                                    <!--<qbh:CustomToolTipPrioritizedPlacementBehavior VerticalPlacement="Top" HorizontalPlacement="Right"/>-->
                                </i:Interaction.Behaviors>
                            </RadioButton>
                            <qcontrol:RadioButtonList.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <qpanel:FlexPanel JustifyContent="SpaceAround" Gap="10"/>
                                </ItemsPanelTemplate>
                            </qcontrol:RadioButtonList.ItemsPanel>
                        </qcontrol:RadioButtonList>
                    </qpanel:FlexPanel>
                    <CheckBox x:Name="checkbox_r3" IsChecked="True">radio3</CheckBox>
                    <TextBlock Text="{Binding SelectedValue, ElementName=rr1}"/>
                </StackPanel>
                
            </TabItem>
            <TabItem Header="Dynmaic">
                <StackPanel>
                    <TextBox Text="{Binding Item, UpdateSourceTrigger=PropertyChanged}"/>
                    <qcontrol:RadioButtonList ItemsSource="{Binding Items}"  SelectedItem="{Binding Item}" Height="35">
                        <qcontrol:RadioButtonList.ItemTemplate>
                            <DataTemplate>
                                <RadioButton Command="{Binding DataContext.SetItemCommand, ElementName=local}" GroupName="item" Content="{Binding}"/>
                            </DataTemplate>
                        </qcontrol:RadioButtonList.ItemTemplate>
                        <qcontrol:RadioButtonList.ItemsPanel>
                            <ItemsPanelTemplate>
                                <qpanel:FlexPanel JustifyContent="SpaceAround" Gap="10"/>
                            </ItemsPanelTemplate>
                        </qcontrol:RadioButtonList.ItemsPanel>
                    </qcontrol:RadioButtonList>
                </StackPanel>
            </TabItem>
            <TabItem Header="DataItem">
                <StackPanel>
                    <ComboBox SelectedItem="{Binding DataItem}" ItemsSource="{Binding DataItems}"/>
                    <qcontrol:RadioButtonList ItemsSource="{Binding DataItems}" SelectionChanged="RadioButtonList_SelectionChanged" SelectedValue="{Binding DataItem}" Height="35">
                        <qcontrol:RadioButtonList.ItemTemplate>
                            <DataTemplate>
                                <RadioButton Command="{Binding DataContext.SetDataItemCommand, ElementName=local}" GroupName="dataitem" Content="{Binding Name}"/>
                            </DataTemplate>
                        </qcontrol:RadioButtonList.ItemTemplate>
                        <qcontrol:RadioButtonList.ItemsPanel>
                            <ItemsPanelTemplate>
                                <qpanel:FlexPanel JustifyContent="SpaceAround" Gap="10"/>
                            </ItemsPanelTemplate>
                        </qcontrol:RadioButtonList.ItemsPanel>
                    </qcontrol:RadioButtonList>
                </StackPanel>
            </TabItem>
            <TabItem Header="DataItem by Id">
                <StackPanel>
                    <TextBox Text="{Binding DataItemId, UpdateSourceTrigger=PropertyChanged}"/>
                    <qcontrol:RadioButtonList Command="{Binding SetDataItemCommand}" ItemsSource="{Binding DataItems}" SelectionChanged="RadioButtonList_SelectionChanged" SelectedValue="{Binding DataItemId}" SelectedValuePath="Id" Height="35">
                        <qcontrol:RadioButtonList.ItemTemplate>
                            <DataTemplate>
                                <RadioButton Command="{Binding DataContext.SetDataItemCommand, ElementName=local}" GroupName="dataitem" Content="{Binding Name}"/>
                            </DataTemplate>
                        </qcontrol:RadioButtonList.ItemTemplate>
                        <qcontrol:RadioButtonList.ItemsPanel>
                            <ItemsPanelTemplate>
                                <qpanel:FlexPanel JustifyContent="SpaceAround" Gap="10"/>
                            </ItemsPanelTemplate>
                        </qcontrol:RadioButtonList.ItemsPanel>
                    </qcontrol:RadioButtonList>
                </StackPanel>
            </TabItem>
            <TabItem Header="DataItem by DisplayMemberPath">
                <StackPanel>
                    <TextBox Text="{Binding DataItemId, UpdateSourceTrigger=PropertyChanged}"/>
                    <qcontrol:RadioButtonList ItemsSource="{Binding DataItems}" DisplayMemberPath="Name" SelectionChanged="RadioButtonList_SelectionChanged" SelectedValue="{Binding DataItemId}" SelectedValuePath="Id" Height="35">
                        <qcontrol:RadioButtonList.ItemContainerStyle>
                            <Style BasedOn="{StaticResource radiobtn}" TargetType="RadioButton">
                                <Setter Property="IsEnabled" Value="{Binding IsEnabled}"/>
                                <Setter Property="ToolTip">
                                    <Setter.Value>
                                        <ToolTip Placement="Top">
                                            <TextBlock Text="123fghjklkjhgfghj\r\nsdfghjhgcxcvbn"/>
                                        </ToolTip>
                                    </Setter.Value>
                                </Setter>
                                <!--<Setter Property="i:Interaction.Behaviors">
                                    <Setter.Value>
                                        <qbh:TooltipAlignmentBehavior HorizontalAlignment="Left" Gap="10" Offset="20"/>
                                    </Setter.Value>
                                </Setter>-->
                            </Style>
                            
                        </qcontrol:RadioButtonList.ItemContainerStyle>
                        <qcontrol:RadioButtonList.ItemsPanel>
                            <ItemsPanelTemplate>
                                <qpanel:FlexPanel JustifyContent="SpaceAround" Gap="10"/>
                            </ItemsPanelTemplate>
                        </qcontrol:RadioButtonList.ItemsPanel>
                    </qcontrol:RadioButtonList>
                </StackPanel>
            </TabItem>
        </TabControl>
    </StackPanel>
</Window>
